{
  "name": "phv-budget-tracker",
  "version": "1.0.0",
  "description": "Budget tracking app for Singapore PHV drivers",
  "main": "index.js",
  "scripts": {
    "start": "npx expo start",
    "android": "npx expo start --android",
    "ios": "npx expo start --ios",
    "web": "npx expo start --web",
    "build": "npx expo build",
    "build:web": "npx expo start --web --no-dev --minify",
    "web:build": "npx expo export -p web",
    "build:android": "npx expo build:android",
    "build:ios": "npx expo build:ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "postinstall": "npx patch-package",
    "lint:components": "eslint src/components --ext .tsx --fix",
    "validate:design-tokens": "node scripts/validate-design-tokens.js",
    "test:a11y": "jest --testPathPattern=a11y",
    "validate:sg-formatting": "node scripts/validate-singapore-formatting.js",
    "test:performance": "jest --testPathPattern=performance",
    "validate:phv-ui": "node scripts/validate-phv-patterns.js",
    "ui:test": "npm run test:a11y && npm run test:performance",
    "ui:validate": "npm run validate:design-tokens && npm run validate:sg-formatting && npm run validate:phv-ui",
    "ui:lint": "npm run lint:components && npm run prettier src/components src/screens",
    "validate:seo-meta": "node scripts/seo/validate-meta-tags.js",
    "validate:page-speed": "node scripts/seo/validate-page-speed.js",
    "validate:schema-markup": "node scripts/seo/validate-schema.js",
    "validate:international-seo": "node scripts/seo/validate-international-seo.js",
    "analyze:seo-content": "node scripts/seo/analyze-content.js",
    "validate:mobile-seo": "node scripts/seo/validate-mobile-seo.js",
    "validate:internal-links": "node scripts/seo/validate-internal-links.js",
    "seo:validate": "npm run validate:seo-meta && npm run validate:schema-markup && npm run validate:international-seo",
    "seo:audit": "npm run analyze:seo-content && npm run validate:page-speed && npm run validate:mobile-seo",
    "validate:subscription-pricing": "node scripts/billing/validate-subscription-pricing.js",
    "validate:payment-gateways": "node scripts/billing/validate-payment-gateways.js",
    "validate:acra-compliance": "node scripts/acra/validate-acra-compliance.js",
    "validate:tax-calculations": "node scripts/tax/validate-tax-calculations.js",
    "validate:revenue-recognition": "node scripts/acra/validate-revenue-recognition.js",
    "validate:audit-trail": "node scripts/security/validate-audit-trail.js",
    "validate:financial-reports": "node scripts/acra/validate-financial-reports.js",
    "validate:rbac-config": "node scripts/security/validate-rbac-config.js",
    "validate:financial-endpoints": "node scripts/security/validate-financial-endpoints.js",
    "validate:data-masking": "node scripts/security/validate-data-masking.js",
    "billing:validate": "npm run validate:subscription-pricing && npm run validate:payment-gateways && npm run validate:acra-compliance",
    "security:validate": "npm run validate:rbac-config && npm run validate:financial-endpoints && npm run validate:data-masking",
    "compliance:full": "npm run billing:validate && npm run security:validate && npm run validate:audit-trail",
    "validate:chatbot-training": "node scripts/support/validate-chatbot-training.js",
    "validate:knowledge-base": "node scripts/support/validate-knowledge-base.js",
    "validate:support-escalation": "node scripts/support/validate-escalation-rules.js",
    "validate:multilingual-content": "node scripts/support/validate-multilingual-content.js",
    "generate:support-training-data": "node scripts/support/generate-training-data.js",
    "update:regional-knowledge-base": "node scripts/support/update-regional-knowledge.js",
    "support:validate": "npm run validate:chatbot-training && npm run validate:knowledge-base && npm run validate:support-escalation",
    "support:deploy": "npm run support:validate && npm run generate:support-training-data && npm run update:regional-knowledge-base",
    "ai:full-validation": "npm run support:validate && npm run compliance:full && npm run security:validate"
  },
  "keywords": [
    "phv",
    "budget",
    "singapore",
    "react-native",
    "nodejs",
    "grab",
    "tada",
    "expense-tracker"
  ],
  "author": "PHV Budget Tracker Team",
  "license": "MIT",
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-camera-roll/camera-roll": "^5.7.4",
    "@react-native-community/datetimepicker": "^8.4.4",
    "@react-native-community/hooks": "^100.1.0",
    "@react-native-community/netinfo": "11.4.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.11.0",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.11.0",
    "chalk": "^5.6.0",
    "claude": "^0.1.2",
    "date-fns": "^2.30.0",
    "expo": "~53.0.22",
    "expo-av": "~15.1.7",
    "expo-barcode-scanner": "~12.5.3",
    "expo-camera": "~16.1.11",
    "expo-document-picker": "~13.1.6",
    "expo-file-system": "~18.1.11",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.7",
    "expo-location": "~18.1.6",
    "expo-media-library": "~17.1.7",
    "expo-notifications": "^0.31.4",
    "expo-secure-store": "~14.2.4",
    "expo-sharing": "~13.1.5",
    "expo-status-bar": "~2.2.3",
    "formik": "^2.4.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6",
    "react-native-chart-kit": "^6.12.0",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-modal": "^13.0.1",
    "react-native-paper": "^5.11.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-vector-icons": "^10.0.2",
    "react-native-web": "^0.20.0",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^4.1.12",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.0.10",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.2.1",
    "jest-expo": "~49.0.0",
    "lint-staged": "^15.2.0",
    "nativewind": "^4.1.23",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "react-native-dotenv": "^3.4.11",
    "react-native-svg-transformer": "^1.5.1",
    "typescript": "~5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
